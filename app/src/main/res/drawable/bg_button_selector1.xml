<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- Corner的属性是设置圆角的半径的-->
            <corners
                android:radius="4dp"
                />
            <!-- Button里面的文字与Button边界的间隔-->
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
            <solid android:color="#2492b2" />
            <stroke
                android:width="1dp"
                android:color="#347fc1" />
        </shape>
    </item>
    <!-- 默认时 -->
    <item >
        <shape
            android:shape="rectangle">
            <!-- Corner的属性是设置圆角的半径的-->
            <corners
                android:radius="4dp"
                />
            <!-- Button里面的文字与Button边界的间隔-->
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
            <solid android:color="#5bc0de" />
            <stroke
                android:width="1dp"
                android:color="#46b8da" />
        </shape>
    </item>
</selector>