<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.android.a6doctors">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".view.MainActivity"></activity>
        <activity
            android:name=".view.AddPatientActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.AddPatientCaseActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.SeePatientActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.SeePatientCaseActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.foamtrace.photopicker.PhotoPickerActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/PhotoPickerTheme" />
        <activity
            android:name="com.foamtrace.photopicker.PhotoPreviewActivity"
            android:theme="@style/PhotoPickerTheme" />
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.PhotoActivity"
            android:label="@string/title_activity_photo"></activity>
    </application>

</manifest>